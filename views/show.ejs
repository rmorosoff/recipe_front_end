</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<div class="recipeHeader">
  <p>
    <%= recipe.title %>
  </p>
  <p>
    <%= recipe.description %>
  </p>
  <p>
    <%= recipe.minutes %> minutes
  </p>

</div>

<div>
  <h2>Ingredients</h2>
  <table class="table table-striped table-bordered" id="ingredientsTable" style="width:100%">
    <thead>
      <tr>
        <th>Ingredient Item</th>
        <th>Quantity</th>
        <th>Unit of Measure</th>
        <th>Action </th>
      </tr>
    </thead>
    <tbody>
    <% if(recipe && recipe.ingredients && recipe.ingredients.length > 0){ %>
      <% recipe.ingredients.forEach(function(ingredient){ %>
        <tr>
          <td><%= ingredient.foodItem %></td>
          <td><%= ingredient.quantity %></td>
          <td><%= ingredient.unitOfMeasure %></td>
          <td><button class="ingredientDelete btn-info" data-id="<%= recipe.ingredient.id %>">Delete</button>
        </tr>
      <% }) %>
    <% } %>
    </tbody>
  </table>
</div>

<div>
  <h2>Recipe Steps</h2>
  <table class="table table-striped table-bordered" id="stepsTable" style="width:100%">
    <thead>
      <tr>
        <th>Step</th>
        <th>Action </th>
      </tr>
    </thead>
    <tbody>
    <% if(recipe && recipe.instructions && recipe.instructions.length > 0){ %>
      <% recipe.instructions.forEach(function(instruction){ %>
        <tr>
          <td><%= instruction.step %></td>
          <td><button class="instructionDelete btn-info" data-id="<%= recipe.instruction.id %>">Delete</button>
        </tr>
      <% }) %>
    <% } %>
    </tbody>
  </table>
</div>
